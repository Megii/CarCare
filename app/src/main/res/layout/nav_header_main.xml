<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/normal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Light">



    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/nav_header_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/nav_header_text"
        android:layout_alignParentTop="true"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/ic_logo_light_background"
        />
    <com.drivecom.utils.RobotoMediumFontTextView
        android:id="@+id/nav_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:textColor="@color/textSecondaryDarkBackground"
        android:textSize="@dimen/medium_text_size"
        android:text="john.smith@gmail.com"
        />

</RelativeLayout>
