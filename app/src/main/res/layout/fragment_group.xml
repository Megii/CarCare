                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_add_circle_light_72dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

