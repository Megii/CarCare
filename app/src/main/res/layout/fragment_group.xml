            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_group_card_view_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/very_small_margin"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:foreground="@drawable/rounded_clickable_button_background_light"
                app:cardBackgroundColor="@color/cardview_dark_background">

                <ImageView
                    android:id="@+id/fragment_group_user_status_0"
                    android:layout_width="@dimen/group_user_status_dot_size"
                    android:layout_height="@dimen/group_user_status_dot_size"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/very_small_margin"
                    android:src="@drawable/oval_shape_red"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/normal_margin">

                    <com.drivecom.utils.RobotoMediumFontTextView
                        android:id="@+id/fragment_group_user_name_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:textColor="@color/textPrimaryDarkBackground"
                        android:textSize="@dimen/big_text_size" />

                    <com.drivecom.utils.RobotoMediumFontTextView
                        android:id="@+id/fragment_group_user_registration_number_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/textSecondaryDarkBackground"
                        android:textSize="@dimen/medium_text_size" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/fragment_group_user_add_image_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_add_circle_light_72dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/fragment_group_card_view_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/very_small_margin"
                android:layout_weight="1"
