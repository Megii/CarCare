<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/very_small_margin"
    android:paddingLeft="@dimen/dialog_margin_horizontal"
    android:paddingRight="@dimen/dialog_margin_horizontal"
    android:paddingTop="@dimen/dialog_margin_top"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        >
        <EditText
            android:id="@+id/dialog_account_data_email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size"
            android:hint="@string/e_mail_address"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/very_small_margin"
            android:maxLines="1"
            android:theme="@style/TextLabel"
            android:inputType="none"
            android:editable="false"
            android:clickable="false"
            android:focusable="false"
            android:ellipsize="end"
            android:background="@color/backgroundDark"
            android:textColor="@color/textPrimaryDarkBackground"
            android:drawableLeft="@drawable/ic_at"
            android:drawablePadding="@dimen/small_margin"
            />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_account_data_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name"
            android:maxLines="1"
            android:layout_marginBottom="@dimen/small_margin"
            android:inputType="text"
            android:ellipsize="end"
            android:theme="@style/TextLabel"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/textPrimaryDarkBackground"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="@dimen/small_margin"
            />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_account_data_registration_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/registration_number"
            android:maxLines="1"
            android:inputType="text"
            android:ellipsize="end"
            android:theme="@style/TextLabel"
            android:textSize="@dimen/medium_text_size"
            android:textColor="@color/textPrimaryDarkBackground"
            android:drawableLeft="@drawable/ic_car"
            android:drawablePadding="@dimen/small_margin"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/small_margin"
        >
        <ProgressBar
            android:id="@+id/dialog_account_data_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />

        <com.drivecom.utils.RobotoMediumFontTextView
            android:id="@+id/dialog_account_data_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimaryDarkBackground"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />
    </LinearLayout>

</RelativeLayout>